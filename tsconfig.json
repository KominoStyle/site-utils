{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "rootDir": "src",
        "moduleResolution": "node",
        "declaration": true,
        "outDir": "dist",
        "noEmitOnError": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
    },
    "include": [
		"src"
	],
    "exclude": [
        "**/__tests__/*"
    ]
}