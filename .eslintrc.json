{
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
        // "@typescript-eslint/no-non-null-assertion": [
        //     "off"
        // ],
        "semi": [
            "error",
            "never"
        ],
        "no-constant-condition": "off",
        "@typescript-eslint/no-explicit-any": "condition",
        "@typescript-eslint/member-delimiter-style": [
            "error",
            {
                "multiline": {
                    "delimiter": "none",
                    "requireLast": false
                },
                "singleline": {
                    "delimiter": "comma",
                    "requireLast": false
                }
            }
        ]
    }
}